upstream authelia {
    server authelia:9091;
}

map $host $authelia_host {
    default ${AUTHELIA_HOST};
}

server {
    server_name ${AUTHELIA_HOST};
    include /etc/nginx/ext/ssl.conf;

    location ~ ^/(.*)$ {
        set $upstream http://authelia/$1$is_args$args;
        proxy_pass $upstream;
        include /etc/nginx/ext/proxy.conf;
    }
}
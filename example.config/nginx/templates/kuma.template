upstream uptime-kuma {
    server uptime-kuma:3001;
}

server {
    server_name ${UPTIME_KUMA_HOST};
    include /etc/nginx/ext/ssl.conf;

    location ~ ^/(.*)$ {
        set $upstream http://uptime-kuma/$1$is_args$args;
        proxy_pass $upstream;
        include /etc/nginx/ext/proxy.conf;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
    }
}
